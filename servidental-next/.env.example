# ==========================================
# VARIABLES DE ENTORNO - SERVIDENTAL NEXT.JS
# ==========================================
# Copiar este archivo a .env.local para desarrollo local
# En Vercel, configurar estas variables en Project Settings → Environment Variables

# ------------------------------------------
# WOOCOMMERCE API (REQUERIDO)
# ------------------------------------------
# URL base del backend de WooCommerce/WordPress (SIN barra final)
WOOCOMMERCE_URL=https://wp.servidentalcr.com

# Credenciales de la REST API de WooCommerce
# Generar en: WP Admin → WooCommerce → Settings → Advanced → REST API
WOOCOMMERCE_CONSUMER_KEY=ck_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
WOOCOMMERCE_CONSUMER_SECRET=cs_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ------------------------------------------
# WORDPRESS API - BLOG (REQUERIDO)
# ------------------------------------------
# URL base del WordPress (puede ser la misma que WOOCOMMERCE_URL)
WORDPRESS_BASE_URL=https://wp.servidentalcr.com

# URL del endpoint de la API REST de WordPress
WP_API_URL=https://wp.servidentalcr.com/wp-json/wp/v2

# URL del endpoint custom de WordPress (si aplica)
CUSTOM_API_URL=https://wp.servidentalcr.com/wp-json/servidental/v1

# ------------------------------------------
# BASE URL - SSR (REQUERIDO PARA PREVIEW)
# ------------------------------------------
# En desarrollo local
NEXT_PUBLIC_BASE_URL=http://localhost:3001

# En Vercel Preview, usar la URL de preview (o dejar vacío y Vercel lo infiere)
# NEXT_PUBLIC_BASE_URL=https://servidental-next-git-[branch]-[team].vercel.app

# En producción
# NEXT_PUBLIC_BASE_URL=https://servidentalcr.com

# ------------------------------------------
# TILOPAY - PASARELA DE PAGO (OPCIONAL)
# ------------------------------------------
# Credenciales de TiloPay para Costa Rica
# Obtener en: https://dashboard.tilopay.com/
TILOPAY_API_KEY=your_tilopay_api_key_here
TILOPAY_SECRET=your_tilopay_secret_here

# ------------------------------------------
# EMAILJS - FORMULARIOS (OPCIONAL)
# ------------------------------------------
# Configuración de EmailJS para envío de emails
# Obtener en: https://dashboard.emailjs.com/
EMAILJS_SERVICE_ID=your_service_id
EMAILJS_TEMPLATE_ID=your_template_id
EMAILJS_USER_ID=your_user_id

# ------------------------------------------
# PÚBLICAS - ACCESIBLES EN CLIENTE
# ------------------------------------------
NEXT_PUBLIC_WOOCOMMERCE_URL=https://wp.servidentalcr.com
NEXT_PUBLIC_DEFAULT_CURRENCY=CRC
NEXT_PUBLIC_DEFAULT_COUNTRY=CR
NEXT_PUBLIC_STORE_NAME=ServidentalCR
NEXT_PUBLIC_STORE_EMAIL=info@servidentalcr.com
NEXT_PUBLIC_STORE_PHONE=+506-XXXX-XXXX

# ------------------------------------------
# DESARROLLO (OPCIONAL)
# ------------------------------------------
NODE_ENV=development
PORT=3001

# Opciones de migración (legacy, solo si re-ejecutas migraciones)
MIGRATION_DRY_RUN=true
MIGRATION_BATCH_SIZE=10
MIGRATION_DELAY=2000